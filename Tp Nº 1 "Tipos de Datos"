#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int main() { 
 int a = 0;
 string input = "";
 while (true) {
   cout << "Ingrese un numero entero y positivo: \n";
   getline(cin, input);
   stringstream myStream(input);
   if (myStream >> a)
     break;
   cout << "Te equivocaste amigo\n" << endl;
 }

 char yoquese  = {0};

 while (true) {
   cout << "por favor ingrese un solo dato: \n";
   getline(cin, input);

   if (input.length() == 1) {
     yoquese = input[0];
     break;
   }
      cout << "No estas entendiendo amigo\n" << endl;
 }
 cout << "Has ingresado: " << yoquese << a << endl << endl;
}
